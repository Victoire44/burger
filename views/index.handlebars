<body>
    <h1 class="text-center text-white m-5" style="font-family: 'DM Serif Display', serif">Eat-Da-Burger</h1>
    <div class="container text-center p-4 bg-white" style="max-width: 960px">
        
        <div class="row">
            <div class="col-md-6 ">
                <ul style="list-style-type:none">
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li>{{burger_name}} <button type="button" class="devourIt" data-id="{{id}}">Devour it</button></li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6">
                <ul style="list-style-type:none">
                    {{#each burgers}}
                    {{#if devoured}}
                    <li>{{burger_name}}</li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <form class="create-form">
                            <div class="form-group m-5">
                                <label for="burger" style="font-size: 20px">Enter a burger you want to eat Click the "Submit"
                                    button:</label><br>
                                <input class="form-control" type="text" id="burger" name="name">
                            </div>
                            <button class="btn btn-danger" type="submit">Submit</button>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
    </div>

</body>